<!-- activity_main.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="Iniciar sesión como:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Navegación -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitulo"
        android:paddingTop="20dp">

        <!-- Botón Doctor -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnLoginDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_doctor"
                android:onClick="loginDoctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor" />

        </LinearLayout>

        <!-- Botón Paciente -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnLoginPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_paciente"
                android:onClick="loginPaciente" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paciente" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
